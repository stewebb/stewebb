// Portfolio Modal 1
#portfolioModal1.portfolio-modal.modal.fade(tabindex='-1', aria-labelledby='portfolioModal1', aria-hidden='true')
    .modal-dialog.modal-xl
        .modal-content
            .modal-header.border-0
                button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
            .modal-body.text-center.pb-5
                .container
                    .row.justify-content-center
                        .col-lg-8

                            // Portfolio Modal - Title
                            h2.portfolio-modal-title.text-secondary.mb-0 The eTWIG Project

                            // Icon Divider
                            .divider-custom
                                .divider-custom-line
                                .divider-custom-icon
                                    i.fas.fa-code
                                .divider-custom-line

                            // Portfolio Modal - Image
                            //img.img-fluid.rounded.mb-5(src='assets/img/portfolio/cabin.png', alt='...')

                            #portfolioModalCarousel.carousel.slide(data-bs-ride='carousel')
                            // Indicators/dots
                            .carousel-indicators
                                button(type='button', data-bs-target='#portfolioModalCarousel', data-bs-slide-to='0', class='active', aria-current='true', aria-label='Slide 1')
                                button(type='button', data-bs-target='#portfolioModalCarousel', data-bs-slide-to='1', aria-label='Slide 2')
                                button(type='button', data-bs-target='#portfolioModalCarousel', data-bs-slide-to='2', aria-label='Slide 3')

                            // The slideshow/carousel
                            .carousel-inner
                                .carousel-item.active
                                img.d-block.w-100.img-fluid.rounded.mb-5(src='assets/img/portfolio/cabin.png', alt='...')
                                .carousel-item
                                img.d-block.w-100.img-fluid.rounded.mb-5(src='assets/img/portfolio/cabin.png', alt='...')
                                .carousel-item
                                img.d-block.w-100.img-fluid.rounded.mb-5(src='assets/img/portfolio/cabin.png', alt='...')

                            // Left and right controls/icons
                            button.carousel-control-prev(type='button', data-bs-target='#portfolioModalCarousel', data-bs-slide='prev')
                                span.carousel-control-prev-icon(aria-hidden='true')
                                span.visually-hidden Previous
                            button.carousel-control-next(type='button', data-bs-target='#portfolioModalCarousel', data-bs-slide='next')
                                span.carousel-control-next-icon(aria-hidden='true')
                                span.visually-hidden Next

                            


